@model List<Product>

<div class="container">
	<div class="d-flex justify-content-between pt-4 pb-3">
		<div>
			<h2>Product List</h2>
		</div>
		<div>
			<a asp-controller="Product" asp-action="Create" class="btn btn-primary">
				<i class="bi bi-plus-circle"></i>
				Create New Product
			</a>
		</div>
	</div>
	<table class="table table-bordered table-striped">
		<thead>
			<tr>
				<th>Name</th>
				<th>Description</th>
				<th>Price</th>
				<th>Quantity</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var product in Model)
			{
				<tr>
					<td>@product.Name</td>
					<td>@product.Description</td>
					<td>@product.Price</td>
					<td>@product.Quantity</td>
				</tr>
			}
		</tbody>
	</table>
</div>
